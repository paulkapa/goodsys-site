extends layout

block contentTop
	.text-container-title
		h1 Subscriptions
		if subscription == "advantage"
			h2 IT Advantage
		else if subscription == "flexible"
			h2 IT Flexible
		else if subscription == "unlimited"
			h2 IT Unlimited
		else if subscription == "premium"
			h2 IT Premium
		else
			h2 Details
block content
	if subscription == "advantage"
		h2 Not Found
	else if subscription == "flexible"
		h2 Not Found
	else if subscription == "unlimited"
		h2 Not Found
	else if subscription == "premium"
		include it-premium.pug
	else
		h2 Content
block contentTopRO
	.text-container-title
		h1 Abonamente
		if subscription == "advantage"
			h2 IT Avantaj
		else if subscription == "flexible"
			h2 IT Flexibil
		else if subscription == "unlimited"
			h2 IT Bussiness Nelimitat
		else if subscription == "premium"
			h2 IT Bussiness Premium
		else
			h2 Detalii
block contentRO
	if subscription == "advantage"
		h2 Not Found
	else if subscription == "flexible"
		h2 Not Found
	else if subscription == "unlimited"
		h2 Not Found
	else if subscription == "premium"
		include it-premiumRO.pug
	else
		h2 Continut
